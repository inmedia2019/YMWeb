@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    layui.use(['jquery', 'form', 'laydate', 'common','optimizeSelectOption'], function () {
        var form = layui.form,
            $ = layui.$,
            common = layui.common,
            laydate = layui.laydate;
        var keyValue = $.request("keyValue");
        //权限字段
        common.authorizeFields('adminform');
        var event = $.request("event");
        //此处需修改
        //类型为时间时
        //laydate.render({
            //elem: '#F_Birthday'
            //, btns: ['clear', 'now']
            //, trigger: 'click',
            //format: 'yyyy-MM-dd',
        //});
        form.on('radio(F_Type)', function (data) {
            if (data.value == "1001") {
                $(".linkurl").show();
                $(".moban").hide();
            } else if (data.value == "1002") {
              //  $(".linkurl").hide();
                $(".moban").show();
            } else if (data.value == "1003") {
                $(".linkurl").hide();
                $(".moban").show();
            }
            $("#F_Type").val(data.value);
            form.render();
        });
        $(function () {
            initControl();
            if (event == "edit") {
                 common.ajax({
                   url: '@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Channel/GetFormJson',
                   dataType: 'json',
                   data: { keyValue: keyValue },
                   async: false,
                   success: function (data) {
                       common.val('adminform', data);
					   var Description = data.F_PictureUrl;
					
					   if (Description != null) {
						   // editor准备好之后才可以使用
						   var editor = UE.getEditor("F_PictureUrl");
						   editor.ready(function () {
							   editor.setContent(Description);
						   });
					   }
                    }
               });
            }
            else {
                if (!!keyValue) {
                    $('#F_ParentId').val(keyValue);
                }
            }
            if ($("#F_ChannelImages").val() != "") {
                $("#F_ChannelImagesPic").attr("src", $("#F_ChannelImages").val());
                $("#imgshow").removeAttr("class", "layui-hide");
            }

		

           // $(".linkurl").hide();
            if ($("#F_Type").val() != "") {
                $("input[name=F_Type][value=1002]").attr("checked", $("#F_Type").val() == 1002 ? true : false);
                $("input[name=F_Type][value=1001]").attr("checked", $("#F_Type").val() == 1001 ? true : false);
                $("input[name=F_Type][value=1003]").attr("checked", $("#F_Type").val() == 1003 ? true : false);
                if ($("#F_Type").val() == "1001") {
                    $(".linkurl").show();
                    $(".moban").hide();
                } else if ($("#F_Type").val() == "1002") {
                   // $(".linkurl").hide();
                    $(".moban").show();
                } else if ($("#F_Type").val() == "1003") {
                    $(".linkurl").hide();
                    $(".moban").show();
                }

            }
            form.render();
       });
       wcLoading.close();

       function initControl() {
            $("#F_ParentId").bindSelect({
                url: "@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Channel/GetTreeSelectJson",
            });

            //绑定数据源
            //类型为下拉框时
           $("#F_ChannelTemplate").bindSelect({
               url: "@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Template/GetTemplate",
               id: "F_Id",
               text: "F_TemplateName",
                search: true
            });
           $("#F_ContentTemplate").bindSelect({
               url: "@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Template/GetTemplate",
               id: "F_Id",
               text: "F_TemplateName",
                search: true
           });
           $("#F_ChannelIndex").bindSelect({
               url: "@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/DictionaryDataBase/Badgetypeinfo/GetTemplate",
               id: "F_Id",
               text: "F_Name",
                search: true
           });
           $("#F_ScoreType").bindSelect({
               url: "@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/DictionaryDataBase/Badgetypeinfo/GetTemplate?typeId=1",
               id: "F_Id",
               text: "F_Name",
                search: true
           });
            @*$("#F_Type").bindSelect({
                url: "@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Column/GetColumnType",
            });*@
       }
        //select验证
        form.verify({
            required: function (value, item) {
                var msg = "必填项不能为空";
                value = $.trim(value);
                var isEmpty = !value || value.length < 1;
                // 当前验证元素是select且为空时,将页面定位至layui渲染的select处，或自定义想定位的位置
                if (item.tagName == 'SELECT' && isEmpty) {
                    $("html").animate({
                        scrollTop: $(item).siblings(".layui-form-select").offset().top - 74
                    }, 50);
                }
                if (isEmpty) {
                    return msg;
                }
            }
        });
       //监听提交
       form.on('submit(saveBtn)', function (data) {
           // 单击之后提交按钮不可选,防止重复提交
           $('.site-demo-active').addClass('layui-btn-disabled');
           $('.site-demo-active').attr('disabled', 'disabled');
           var postData = data.field;
           if (!postData["F_EnabledMark"]) postData["F_EnabledMark"] = false;
		   if (!postData["F_PictureUrl"]) postData["F_PictureUrl"] = UE.getEditor('F_PictureUrl').getContent();
           if (!postData["F_IsBrowse"]) postData["F_IsBrowse"] = false;
           if (!postData["F_Show"]) postData["F_Show"] = false;
           common.submitForm({
               url: event == "edit" ? "@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Channel/SubmitForm?keyValue=" + keyValue : "@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Channel/SubmitForm",
               param: postData,
               success: function () {
                   common.reloadIframe("@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Channel/Index", 'data-search-btn');
               }
           })
           return false;
       });

   });
</script>

<body>
    <div class="layuimini-container">
        <div class="layuimini-main" style="margin-bottom: 80px;">
			<div class="layui-form layuimini-form" lay-filter="adminform">
				<div class="layui-form-item layui-hide">
					<label class="layui-form-label required">类型</label>
					<div class="layui-input-block">
						@*<select id="F_Type" name="F_Type" lay-filter="F_Type" lay-verify="required" lay-search>
					<option value="0">==请选择==</option>
				</select>*@
						<input type="hidden" id="F_Type" />
						<input type="radio" name="F_Type" value="1002" title="频道封面" lay-filter="F_Type" checked="checked" lay-verify="required" lay-search>
						<input type="radio" name="F_Type" value="1003" title="列表栏目" lay-filter="F_Type" lay-verify="required" lay-search>
						<input type="radio" name="F_Type" value="1001" title="外部链接" style="display:none;" lay-filter="F_Type" lay-verify="required" lay-search>
					</div>
				</div>
				<div class="layui-form-item layui-hide">
					<label class="layui-form-label required">上级栏目</label>
					<div class="layui-input-block">
						<select id="F_ParentId" name="F_ParentId" lay-verify="required" lay-search>
							<option value="0" selected>父节点</option>
						</select>
					</div>
				</div>


				<div class="layui-form-item layui-hide">
					<label class="layui-form-label required">名称</label>
					<div class="layui-input-block">
						<input type="text" id="F_ChannelName" name="F_ChannelName" autocomplete="off" lay-verify="required" placeholder="请输入栏目名称" class="layui-input">
					</div>
				</div>
				<div class="layui-form-item layui-hide" style="display:none;">
					<label class="layui-form-label">内容徽章类型</label>
					<div class="layui-input-block">

						<select id="F_ChannelIndex" name="F_ChannelIndex" lay-search>
							<option value="0" selected>无</option>
						</select>
					</div>
				</div>
				<div class="layui-form-item layui-hide" style="display:none;">
					<label class="layui-form-label">积分徽章类型</label>
					<div class="layui-input-block">

						<select id="F_ScoreType" name="F_ScoreType" lay-search>
							<option value="0" selected>无</option>
						</select>
					</div>
				</div>
				<div class="layui-form-item layui-hide">
					<label class="layui-form-label">图片</label>
					<div class="layui-input-block" style="padding-right: 110px;">
						<input type="text" class="layui-input" name="F_ChannelImages" id="F_ChannelImages" maxlength="255" readonly="readonly">
						<button type="button" class="layui-btn" style="position: absolute;top: 0;right: 0;cursor: pointer;" id="j_upload_img_btn2">
							<i class="layui-icon"></i>上传图片
						</button>
						<ul id="upload_img_wrap"></ul>
						<textarea id="uploadEditor" style="display: none;"></textarea>
						<span style="color:red">(750*280)上传图片不能大于1M</span>
					</div>
				</div>
				<div class="layui-form-item layui-hide" id="imgshow">
					<label class="layui-form-label"></label>
					<div class="layui-input-block">
						<img id="F_ChannelImagesPic" width="200" height="200" onclick="previewImg(this)" />
					</div>
				</div>
				<div class="layui-form-item layui-hide">
					<label class="layui-form-label">颜色值</label>
					<div class="layui-input-block">
						<input type="text" id="F_Icon" name="F_Icon" autocomplete="off" class="layui-input">
					</div>
				</div>
				<div class="layui-form-item layui-hide">
					<label class="layui-form-label">标题(Title)</label>
					<div class="layui-input-block">
						<input type="text" id="F_Title" name="F_Title" autocomplete="off" class="layui-input" placeholder="请输入标题">
					</div>
				</div>
				<div class="layui-form-item layui-hide">
					<label class="layui-form-label required">内容介绍</label>
					<div class="layui-input-block">
						<textarea id="F_PictureUrl" name="F_PictureUrl" type="text/plain" style="width:100%;height:400px;"></textarea>
					</div>
				</div>
				<div class="layui-form-item layui-hide">
					<label class="layui-form-label">Seo标题</label>
					<div class="layui-input-block">
						<input type="text" id="F_SeoTitle" name="F_SeoTitle" autocomplete="off" class="layui-input" placeholder="请输入Seo标题">
					</div>
				</div>
				<div class="layui-form-item layui-hide moban">
					<label class="layui-form-label">Seo关键字</label>
					<div class="layui-input-block">
						<input type="text" id="F_SeoKeywords" name="F_SeoKeywords" autocomplete="off" class="layui-input" placeholder="请输入Seo关键字">
					</div>
				</div>
				<div class="layui-form-item layui-hide moban">
					<label class="layui-form-label">Seo描述</label>
					<div class="layui-input-block">
						<textarea id="F_SeoDescription" name="F_SeoDescription" autocomplete="off" class="layui-textarea" placeholder="请输入Seo描述"></textarea>
					</div>
				</div>
				<div class="layui-form-item layui-hide" style="display:none;">
					<label class="layui-form-label">自定义URL名称</label>
					<div class="layui-input-block">
						<input type="text" id="F_URLName" name="F_URLName" maxlength="50" class="layui-input">
					</div>
				</div>
				<div class="layui-form-item layui-hide linkurl ">
					<label class="layui-form-label">APPID</label>
					<div class="layui-input-block">
						<input type="text" id="F_LinkUrl" name="F_LinkUrl" class="layui-input">
					</div>
				</div>
				<div class="layui-form-item layui-hide moban">
					<label class="layui-form-label">栏目模板</label>
					<div class="layui-input-block">
						<select id="F_ChannelTemplate" name="F_ChannelTemplate" lay-filter="F_ChannelTemplate" lay-search>
							<option value="">请选择栏目模板</option>
						</select>
					</div>
				</div>
				<div class="layui-form-item layui-hide moban">
					<label class="layui-form-label">内容模板</label>
					<div class="layui-input-block">
						<select id="F_ContentTemplate" name="F_ContentTemplate" lay-filter="F_ContentTemplate" lay-search>
							<option value="">请选择内容模板</option>
						</select>
					</div>
				</div>
				<div class="layui-form-item layui-hide">
					<label class="layui-form-label">前端链接</label>
					<div class="layui-input-block">
						<input type="text" id="F_FrontLink" name="F_FrontLink" class="layui-input">
					</div>
				</div>
				<div class="layui-form-item layui-hide">
					<label class="layui-form-label">选项</label>
					<div class="layui-input-block">
						<input type="checkbox" name="F_EnabledMark" id="F_EnabledMark" checked="checked" value="true" title="有效">
						<input type="checkbox" name="F_IsBrowse" id="F_IsBrowse" value="true" title="专栏" style="display:none;">
						<input type="checkbox" name="F_Show" id="F_Show" value="true" title="显示">
					</div>
				</div>

				<div class="layui-form-item layui-hide">
					<label class="layui-form-label required">排序</label>
					<div class="layui-input-block">
						<input type="number" pattern="[0-9]*" id="F_Order" value="0" name="F_Order" lay-verify="required|number" oninput="if(value.length>8)value=value.slice(0,8)" autocomplete="off" class="layui-input">
					</div>
				</div>
				<div class="form-group-bottom text-right">
					<div class="layui-input-block">
						<button class="layui-btn site-demo-active" lay-submit id="submit" lay-filter="saveBtn">确认保存</button>
					</div>
				</div>
			</div>
            </div>
    </div>
</body>
