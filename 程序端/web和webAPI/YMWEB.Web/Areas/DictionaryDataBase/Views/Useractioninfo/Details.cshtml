                   <div class="layui-input-block">
                        <input type="text" id="scoreNum" name="scoreNum" lay-verify="required" class="layui-input">
                   </div>
               </div>
                <div class="layui-form-item layui-hide">
                   <label class="layui-form-label required">时间</label>
                   <div class="layui-input-block">
                        <input type="text" id="createDate" name="createDate" lay-verify="required" class="layui-input">
                   </div>
               </div>
            </div>
        </div>
    </div>
