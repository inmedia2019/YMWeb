@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    layui.use(['jquery', 'form', 'laydate', 'xmSelect','common','optimizeSelectOption'], function () {
        var form = layui.form,
            $ = layui.$,
            common = layui.common,
            laydate = layui.laydate;
        xmSelect = layui.xmSelect;
        var keyValue = $.request("keyValue");
        var event = $.request("event");
        //权限字段
        common.authorizeFields('adminform');
          var channelSelect= xmSelect.render({
              el: '#channelSelect',
            autoRow: true,
            filterable: true,
            direction: 'down',
            tree: {
                show: true,
                showFolderIcon: true,
                showLine: true,
                indent: 20,
                strict: false,
                clickExpand: true,
                clickCheck: true,
                expandedKeys: true
            },
            toolbar: {
                show: true,
                list: ['ALL', 'REVERSE', 'CLEAR']
            },
            filterable: true,
            height: 'auto',
            data: function () {
                return  @Html.Raw(ViewBag.channel)
            }
        });
          var tagSelect= xmSelect.render({
            el: '#tagSelect',
            autoRow: true,
            filterable: true,
            direction: 'down',
            tree: {
                show: true,
                showFolderIcon: true,
                showLine: true,
                indent: 20,
                strict: false,
                clickExpand: true,
                clickCheck: true,
                expandedKeys: true
            },
            toolbar: {
                show: true,
                list: ['ALL', 'REVERSE', 'CLEAR']
            },
            filterable: true,
            height: 'auto',
            data: function () {
                return  @Html.Raw(ViewBag.lable)
            }
        });
        //此处需修改
        //类型为时间时
        //laydate.render({
            //elem: '#F_Birthday'
            //, btns: ['clear', 'now']
            //, trigger: 'click',
            //format: 'yyyy-MM-dd',
        //});

        $(function () {
            initControl();
            if (event == "edit") {
                var newsdata = JSON.parse('@Html.Raw(ViewBag.Content)');
                postData = newsdata;
                common.val('adminform', newsdata);
                var Description = newsdata.F_Introduction;
                if (Description != null) {
                // editor准备好之后才可以使用
                var editor = UE.getEditor("F_Introduction");
                editor.ready(function () {
                    editor.setContent(Description);
                });
                }
                if (newsdata.F_SubChannelId != null) {
                    var channelarr = newsdata.F_SubChannelId.split(',');
                    channelSelect.setValue(channelarr);
                }
                if (newsdata.F_MarkType != null) {
                    var tagarr = newsdata.F_MarkType.split(',');
                    tagSelect.setValue(tagarr);
                }
            }

            if ($("#F_Photo").val() != "") {
                $("#F_ImgUrlPic").attr("src", $("#F_Photo").val());
                $("#imgshow").removeAttr("class", "layui-hide");
            }
            if ($("#F_Postcard").val() != "") {
                $("#F_ImgUrlPics").attr("src", $("#F_Postcard").val());
                $("#imgshows").removeAttr("class", "layui-hide");
            }
           form.render();
       });
       wcLoading.close();

       function initControl() {
           $("#F_HospitalId").bindSelect({
               url: "@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/DictionaryDataBase/Hospital/GetTreeSelectJson",
            });
       }

       //监听提交
       form.on('submit(saveBtn)', function (data) {
           // 单击之后提交按钮不可选,防止重复提交
           $('.site-demo-active').addClass('layui-btn-disabled');
           $('.site-demo-active').attr('disabled', 'disabled');
           data.field.F_Introduction = UE.getEditor('F_Introduction').getContent();
           data.field.F_SubChannelId = channelSelect.getValue('valueStr');
           data.field.F_MarkType = tagSelect.getValue('valueStr');
           var postData = data.field;
           if (!postData["F_EnabledMark"]) postData["F_EnabledMark"] = false;
           if (!postData["F_IsEP"]) postData["F_IsEP"] = false;
           if (!postData["F_IsWin"]) postData["F_IsWin"] = false;
           if (!postData["F_IsLastWin"]) postData["F_IsLastWin"] = false;
           common.submitForm({
               url: '@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/DictionaryDataBase/Expert/SubmitForm?keyValue=' + keyValue,
               param: postData,
               success: function () {
                   common.reloadIframe("@(YMWeb.Code.GlobalContext.SystemConfig.VirtualDirectory)/DictionaryDataBase/Expert/Index", 'data-search-btn');
               }
           })
           return false;
       });
   });
</script>

<body>
    <div class="layuimini-container">
        <div class="layuimini-main" style="margin-bottom: 80px;">
            <div class="layui-form layuimini-form" lay-filter="adminform">
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label required">姓名</label>
                    <div class="layui-input-block">
                        <input type="hidden" id="F_RankCount" name="F_RankCount" value="0">
                        <input type="text" id="F_Name" name="F_Name" autocomplete="off" lay-verify="required" placeholder="请输入姓名" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label required">所属医院</label>
                    <div class="layui-input-block">
                        <select id="F_HospitalId" name="F_HospitalId" lay-verify="required" lay-search>
                            <option value="0">==请选择==</option>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label">职称</label>
                    <div class="layui-input-block">
                        <input type="text" id="F_Position" name="F_Position" autocomplete="off" placeholder="请输入职称" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label">专业方向</label>
                    <div class="layui-input-block">
                        <input type="text" id="F_Profession" name="F_Profession" autocomplete="off" placeholder="请输入专业方向" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label">照片</label>
                    <div class="layui-input-block" style="padding-right: 110px;">
                        <input type="text" class="layui-input" name="F_Photo" id="F_Photo" maxlength="255" readonly="readonly">
                        <button type="button" class="layui-btn" style="position: absolute;top: 0;right: 0;cursor: pointer;" id="j_upload_img_btn">
                            <i class="layui-icon"></i>上传照片
                        </button>
                        <ul id="upload_img_wrap"></ul>
                        <textarea id="uploadEditor" style="display: none;"></textarea>
                        <span style="color:red">(750*280)上传图片不能大于1M</span>
                    </div>
                </div>
                <div class="layui-form-item layui-hide" id="imgshow">
                    <label class="layui-form-label"></label>
                    <div class="layui-input-block">
                        <img id="F_ImgUrlPic" width="200" height="200" onclick="previewImg(this)" />
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label">明信片</label>
                    <div class="layui-input-block" style="padding-right: 110px;">
                        <input type="text" class="layui-input" name="F_Postcard" id="F_Postcard" maxlength="255" readonly="readonly">
                        <button type="button" class="layui-btn" style="position: absolute;top: 0;right: 0;cursor: pointer;" id="j_upload_img_btns">
                            <i class="layui-icon"></i>上传明信片
                        </button>
                        <ul id="upload_img_wrap"></ul>
                        <textarea id="uploadEditors" style="display: none;"></textarea>
                        <span style="color:red">(750*280)上传图片不能大于1M</span>
                    </div>
                </div>
                <div class="layui-form-item layui-hide" id="imgshows">
                    <label class="layui-form-label"></label>
                    <div class="layui-input-block">
                        <img id="F_ImgUrlPics" width="200" height="200" onclick="previewImg(this)" />
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label required">专家介绍</label>
                    <div class="layui-input-block">
                        <textarea id="F_Introduction" name="F_Introduction" type="text/plain" style="width:100%;height:400px;"></textarea>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">副栏目</label>
                    <div class="layui-input-block">
                        <div id="channelSelect" class="xm-select-demo"></div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">标签</label>
                    <div class="layui-input-block">
                        <div id="tagSelect" class="xm-select-demo"></div>
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label required">显示顺序</label>
                    <div class="layui-input-block">
                        <input type="number" pattern="[0-9]*" id="F_Order" name="F_Order" lay-verify="required|number" oninput="if(value.length>8)value=value.slice(0,8)" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label">选项</label>
                    <div class="layui-input-block">
                        <input type="checkbox" name="F_EnabledMark" id="F_EnabledMark" checked="" value="true" title="有效">
                        <input type="checkbox" name="F_IsEP" id="F_IsEP" checked="" value="true" title="是EP专家">
                        <input type="checkbox" name="F_IsWin" id="F_IsWin" checked="" value="true" title="中国好术者获奖">
                        <input type="checkbox" name="F_IsLastWin" id="F_IsLastWin" checked="" value="true" title="冠军赛人气选手">
                    </div>
                </div>
                <div class="form-group-bottom text-right">
                    <div class="layui-input-block">
                        <button class="layui-btn site-demo-active" lay-submit lay-filter="saveBtn">
                            &emsp;确认保存&emsp;
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
